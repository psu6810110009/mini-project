// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. ตาราง Users (เก็บคนซื้อ และ Admin)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  fullName  String?
  role      Role     @default(USER) // แยก Role ตรงนี้
  orders    Order[]  // 1 User มีหลาย Order
  createdAt DateTime @default(now())
}

// 2. ตาราง Products (สินค้า)
model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  price       Decimal     @db.Decimal(10, 2)
  stock       Int         // เอาไว้ทำ Logic ตัดสต็อก
  image       String?
  orderItems  OrderItem[] // สินค้านี้ไปอยู่ในหลาย OrderItem ได้
  createdAt   DateTime    @default(now())
}

// 3. ตาราง Orders (ใบสั่งซื้อ)
model Order {
  id         Int         @id @default(autoincrement())
  totalPrice Decimal     @db.Decimal(10, 2)
  status     OrderStatus @default(PENDING) // สถานะออเดอร์
  userId     Int
  user       User        @relation(fields: [userId], references: [id])
  items      OrderItem[] // 1 Order มีหลาย Items
  createdAt  DateTime    @default(now())
}

// 4. ตาราง OrderItems (ตารางกลาง Many-to-Many)
model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // ราคาตอนซื้อ
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

// Enum สำหรับ Role และ Status
enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  CANCELLED
}